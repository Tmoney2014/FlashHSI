<UserControl x:Class="FlashHSI.UI.Views.Pages.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FlashHSI.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    
    <!-- AI가 수정함: 홈 화면 UI 재설계 — 하단 컨트롤바 + 풀컬러 클래스 토글 -->
    <UserControl.Resources>
        <converters:HexToColorBrushConverter x:Key="HexToColorBrushConverter"/>
        <converters:LampStatusToColorConverter x:Key="LampStatusToColorConverter"/>
        <converters:PercentageWidthConverter x:Key="PercentageWidthConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 0: 상단 시스템 상태 인디케이터 (변경 없음) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#16213e" Padding="12,8">
            <UniformGrid Rows="1" Columns="4">
                
                <!-- 1) 시뮬레이션 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="시뮬레이션" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="대기"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                            <Setter Property="Text" Value="실행 중"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 2) EtherCAT 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="EtherCAT" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="연결 끊김"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                            <Setter Property="Text" Value="연결됨"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 3) AI 모델 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="AI 모델" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="미로드"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                            <Setter Property="Text" Value="{Binding LoadedModelName}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 4) 피더 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="피더" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="OFF"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                            <Setter Property="Text" Value="ON"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 1: 메인 콘텐츠 (모델 카드 + 타겟 클래스) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="12,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 1. 워크플로우 / 모델 카드 영역 -->
            <Border Grid.Row="0" Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <!-- 제목 + 디렉터리 선택/리프레시 버튼 -->
                    <DockPanel Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="워크플로우 / 모델" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Foreground="#7f8fa6" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="모델 디렉터리를 선택해주세요."/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                                <Setter Property="Text" Value="{Binding LoadedModelName, StringFormat='현재 모델: {0}'}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button Command="{Binding RefreshModelCardsCommand}" 
                                    ToolTip="새로고침"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Foreground="#5dade2" Width="32" Height="32">
                                <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18"/>
                            </Button>
                            <Button Command="{Binding BrowseModelDirectoryCommand}" 
                                    Content="폴더 선택"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="#5dade2" BorderBrush="#5dade2"
                                    Padding="12,6" Height="32" FontSize="12" Margin="4,0,0,0"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <!-- 모델 디렉터리 경로 표시 (비어있으면 숨김) -->
                    <TextBlock Text="{Binding ModelDirectory}" Foreground="#57606f" FontSize="10" 
                               TextTrimming="CharacterEllipsis" Margin="0,0,0,8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModelDirectory}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- 수평 스크롤 모델 카드 리스트 -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                  PreviewMouseWheel="ModelCardScroll_PreviewMouseWheel">
                        <ItemsControl ItemsSource="{Binding ModelCards}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="140" Margin="0,0,8,0" CornerRadius="8" Padding="12" Cursor="Hand"
                                            MouseLeftButtonDown="ModelCard_MouseLeftButtonDown">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#0f3460"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#5dade2"/>
                                                        <Setter Property="Background" Value="#1a3a6b"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#163d70"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <materialDesign:PackIcon Kind="FileDocument" Width="28" Height="28" 
                                                                     Foreground="#5dade2" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                                       TextAlignment="Center" TextTrimming="CharacterEllipsis" MaxHeight="36"
                                                       TextWrapping="Wrap"/>
                                            <!-- 선택 마크 -->
                                            <TextBlock Text="✓ 로드됨" Foreground="#2ed573" FontSize="10" FontWeight="Bold"
                                                       TextAlignment="Center" Margin="0,6,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 카드 없을 때 안내 -->
                    <TextBlock Text="모델 디렉터리를 선택하면 JSON 모델 파일이 카드로 표시됩니다." 
                               Foreground="#57606f" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModelCards.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- 2. 에어건 타겟 클래스 선택 영역 (Redesign: WrapPanel + Toggle Button) -->
            <Border Grid.Row="1" Background="#16213e" CornerRadius="8" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 헤더 영역 -->
                    <DockPanel Grid.Row="0" Margin="4,0,4,8">
                        <StackPanel>
                            <TextBlock Text="에어건 타겟 클래스" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="선택된 클래스만 에어건이 동작합니다." Foreground="#7f8fa6" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Content="전체" Command="{Binding Settings.SelectAllSortClassesCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Foreground="#5dade2" Padding="8,4" Height="28" FontSize="11"/>
                            <Button Content="리버스" Command="{Binding Settings.ReverseSortClassesCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Foreground="#f39c12" Padding="8,4" Height="28" FontSize="11"/>
                            <Button Content="해제" Command="{Binding Settings.DeselectAllSortClassesCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                    Foreground="#aaa" Padding="8,4" Height="28" FontSize="11"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <!-- 선택된 타겟 요약 (Summary Area) -->
                    <Border Grid.Row="1" Background="#0f3460" CornerRadius="6" Padding="8" Margin="0,0,0,12">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Text="선택된 타겟" Foreground="#a0a0a0" FontSize="11" 
                                       VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                            
                            <!-- 선택된 아이템들 나열 -->
                            <ItemsControl ItemsSource="{Binding Settings.SortClasses}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,3" Margin="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- AI가 수정함: 존재하지 않는 SelectedSortClassesCount 바인딩 제거, 힌트는 항상 Collapsed (선택된 타겟 헤더로 충분) -->
                        </DockPanel>
                    </Border>
                    
                    <!-- 클래스 토글 버튼 그리드 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Settings.SortClasses}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- ToggleButton 스타일 커스텀 -->
                                    <!-- AI가 수정함: ControlTemplate Trigger에서 {Binding} 사용 불가 → 두 개의 Border 오버레이 방식으로 변경 -->
                                    <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Width="Auto" MinWidth="110" Height="70"
                                                  Margin="4" Cursor="Hand">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid x:Name="rootGrid">
                                                    <!-- 비선택 상태 배경 (항상 존재) -->
                                                    <Border x:Name="unselectedBorder" CornerRadius="10" BorderThickness="2" 
                                                            BorderBrush="Transparent" Background="#0f3460" Padding="12,8">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid Grid.Row="0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Ellipse Width="12" Height="12" HorizontalAlignment="Left"
                                                                         Fill="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                                <TextBlock Grid.Column="1" Text="✓" Foreground="White" FontSize="12" FontWeight="Bold" Visibility="Hidden"/>
                                                            </Grid>
                                                            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,4,0,0">
                                                                <TextBlock Text="{Binding Name}" Foreground="#a0a0a0" FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding Index, StringFormat='Class {0}'}" Foreground="#57606f" FontSize="10"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                    
                                                    <!-- 선택 상태 배경 (IsSelected=True일 때만 보임) — Binding 사용 가능 -->
                                                    <Border x:Name="selectedBorder" CornerRadius="10" BorderThickness="2" 
                                                            BorderBrush="White" Padding="12,8"
                                                            Background="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"
                                                            Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid Grid.Row="0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Ellipse Width="12" Height="12" HorizontalAlignment="Left"
                                                                         Fill="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                                <TextBlock Grid.Column="1" Text="✓" Foreground="White" FontSize="12" FontWeight="Bold" Visibility="Visible"/>
                                                            </Grid>
                                                            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,4,0,0">
                                                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding Index, StringFormat='Class {0}'}" Foreground="#e0e0e0" FontSize="10"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                
                                                <ControlTemplate.Triggers>
                                                    <!-- 마우스 오버 효과 -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="rootGrid" Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 모델 미로드 안내 -->
                    <TextBlock Grid.Row="2" Text="모델을 먼저 로드해주세요." 
                               Foreground="#57606f" FontSize="14" 
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Settings.SortClasses.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 2: 하단 컨트롤 바 (New Layout) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Border Grid.Row="2" Background="#16213e" Padding="8,6" Margin="0,0,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    
                    <!-- 1) 시뮬레이션 카드 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0" MinWidth="100">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="PlayCircleOutline" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="시뮬레이션" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ToggleSimulationCommand}" Height="36" FontSize="12" Margin="0,2,0,0" Padding="8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Background" Value="#2ed573"/>
                                        <Setter Property="BorderBrush" Value="#2ed573"/>
                                        <Setter Property="Content" Value="START"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                                <Setter Property="Background" Value="#ff4757"/>
                                                <Setter Property="BorderBrush" Value="#ff4757"/>
                                                <Setter Property="Content" Value="STOP"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 2) HW 연결 카드 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0" MinWidth="100">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="LanConnect" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="HW 연결" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ConnectHardwareCommand}" Height="36" FontSize="12" Margin="0,2,0,0" Padding="8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Foreground" Value="#3742fa"/>
                                        <Setter Property="BorderBrush" Value="#3742fa"/>
                                        <Setter Property="Content" Value="연결"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                                <Setter Property="Background" Value="#388E3C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#388E3C"/>
                                                <Setter Property="Content" Value="해제"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 3) 피더 카드 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0" MinWidth="90">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="PowerPlug" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="피더" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ToggleFeederPowerCommand}" Height="36" FontSize="12" Margin="0,2,0,0" Padding="8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Foreground" Value="#f39c12"/>
                                        <Setter Property="BorderBrush" Value="#f39c12"/>
                                        <Setter Property="Content" Value="ON"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                                <Setter Property="Background" Value="#e67e22"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#e67e22"/>
                                                <Setter Property="Content" Value="OFF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 4) 벨트 카드 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0" MinWidth="90">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <!-- AI가 수정함: ConveyorBelt은 MaterialDesignThemes 4.9.0에 없음 → RotateRight로 대체 -->
                                <materialDesign:PackIcon Kind="RotateRight" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="벨트" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ToggleBeltCommand}" Height="36" FontSize="12" Margin="0,2,0,0" Padding="8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Foreground" Value="#1abc9c"/>
                                        <Setter Property="BorderBrush" Value="#1abc9c"/>
                                        <Setter Property="Content" Value="ON"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBeltOn}" Value="True">
                                                <Setter Property="Background" Value="#16a085"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#16a085"/>
                                                <Setter Property="Content" Value="OFF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 5) 램프 카드 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0" MinWidth="90">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="LightbulbOutline" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="램프" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ToggleLampCommand}" Height="36" FontSize="12" Margin="0,2,0,0" Padding="8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="Foreground" Value="#f1c40f"/>
                                        <Setter Property="BorderBrush" Value="#f1c40f"/>
                                        <Setter Property="Content" Value="ON"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLampOn}" Value="True">
                                                <Setter Property="Background" Value="#f39c12"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#f39c12"/>
                                                <Setter Property="Content" Value="OFF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 6) 통합 상태 카드 (램프 온도 + 에러) -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,4" Margin="4,0" VerticalAlignment="Stretch">
                        <StackPanel VerticalAlignment="Center">
                            <!-- 램프 온도 상태 -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border x:Name="LampIndicatorRoot" Width="140" Height="8" CornerRadius="4" Background="#1a2744" VerticalAlignment="Center">
                                    <Border HorizontalAlignment="Left" CornerRadius="4" Background="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}}">
                                        <Border.Width>
                                            <MultiBinding Converter="{StaticResource PercentageWidthConverter}">
                                                <Binding Path="LampTemperaturePercent"/>
                                                <Binding ElementName="LampIndicatorRoot" Path="ActualWidth"/>
                                            </MultiBinding>
                                        </Border.Width>
                                    </Border>
                                </Border>
                                
                                <TextBlock Grid.Column="1" Text="{Binding LampTemperaturePercentText}" Foreground="#a0a0a0" FontSize="10" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 에러 인디케이터 (작은 아이콘 나열) -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- 왼쪽 벨트 -->
                                <materialDesign:PackIcon Kind="AlertCircle" Width="14" Height="14" Margin="2"
                                                         Foreground="{Binding LeftBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                         ToolTip="왼쪽 벨트 상태"/>
                                <!-- 오른쪽 벨트 -->
                                <materialDesign:PackIcon Kind="AlertCircle" Width="14" Height="14" Margin="2"
                                                         Foreground="{Binding RightBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                         ToolTip="오른쪽 벨트 상태"/>
                                <!-- 긴급 정지 -->
                                <materialDesign:PackIcon Kind="StopCircle" Width="14" Height="14" Margin="2"
                                                         Foreground="{Binding EmergencyStop, Converter={StaticResource StatusToColorConverter}}"
                                                         ToolTip="긴급 정지 상태"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 7) 에러 클리어 -->
                    <Border Background="#0f3460" CornerRadius="8" Padding="12,8" Margin="4,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="Broom" Foreground="#7f8fa6" Margin="0,0,4,0"/>
                                <TextBlock Text="에러" Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Command="{Binding ErrorClearCommand}" Content="클리어"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="#ff6b6b" BorderBrush="#ff6b6b"
                                    Height="36" FontSize="11" Padding="8,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 8) 타이머 상태 카드 (조건부 표시) -->
                     <Border Background="#16213e" CornerRadius="8" Padding="12,4" Margin="12,0,0,0"
                            BorderBrush="OrangeRed" BorderThickness="1"
                            Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                             <StackPanel Margin="0,0,12,0" VerticalAlignment="Center">
                                <TextBlock Text="준비 중" Foreground="#ff6348" FontSize="10" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding RemainingTimeString}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                             </StackPanel>
                             <Button Command="{Binding StopTimerCommand}" Content="중지"
                                     Style="{StaticResource MaterialDesignFlatButton}"
                                     Foreground="#ff6348" Height="30" FontSize="11" Padding="8,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 3: 하단 상태 메시지 (변경 없음) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Border Grid.Row="3" Background="#16213e" Padding="12,4">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#7f8fa6" FontSize="11" HorizontalAlignment="Center"/>
        </Border>
        
    </Grid>
</UserControl>