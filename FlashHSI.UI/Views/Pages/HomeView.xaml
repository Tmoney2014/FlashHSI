<UserControl x:Class="FlashHSI.UI.Views.Pages.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <materialDesign:Card Padding="32" UniformCornerRadius="8" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel Width="300">
                    <TextBlock Text="System Control" Style="{StaticResource MaterialDesignHeadline5TextBlock}" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                    
                    <!-- Simulation Toggle -->
                    <Button Command="{Binding ToggleSimulationCommand}" Height="50" Margin="0,0,0,16" materialDesign:ButtonAssist.CornerRadius="5">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Content" Value="START SIMULATION"/>
                                <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                        <Setter Property="Content" Value="STOP SIMULATION"/>
                                        <Setter Property="Background" Value="#D32F2F"/> 
                                        <Setter Property="BorderBrush" Value="#D32F2F"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Hardware Connect -->
                    <Button Command="{Binding ConnectHardwareCommand}" Height="50" Margin="0,0,0,16">
                         <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Setter Property="Content" Value="CONNECT HARDWARE"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                        <Setter Property="Content" Value="DISCONNECT HARDWARE"/>
                                        <Setter Property="Background" Value="#388E3C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="Gray"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>
