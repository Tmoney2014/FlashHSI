<UserControl x:Class="FlashHSI.UI.Views.Pages.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FlashHSI.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    
    <!-- AI가 수정함: 홈 화면 3차 재설계 — 우측 상태 컬럼 복원 + 듀얼 ItemsControl 카드 선택 + 좌측 악센트 바 가독성 개선 -->
    <UserControl.Resources>
        <converters:HexToColorBrushConverter x:Key="HexToColorBrushConverter"/>
        <converters:LampStatusToColorConverter x:Key="LampStatusToColorConverter"/>
        <converters:PercentageWidthConverter x:Key="PercentageWidthConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 0: 상단 시스템 상태 인디케이터 (변경 없음) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#16213e" Padding="12,8">
            <UniformGrid Rows="1" Columns="4">
                
                <!-- 1) 시뮬레이션 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="시뮬레이션" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="대기"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                            <Setter Property="Text" Value="실행 중"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 2) EtherCAT 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="EtherCAT" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="연결 끊김"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                            <Setter Property="Text" Value="연결됨"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 3) AI 모델 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="AI 모델" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="미로드"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                            <Setter Property="Text" Value="{Binding LoadedModelName}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 4) 피더 상태 -->
                <Border Background="#0f3460" CornerRadius="8" Margin="4" Padding="12,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#57606f"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                                <Setter Property="Fill" Value="#2ed573"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="피더" Foreground="#a0a0a0" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="OFF"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                            <Setter Property="Text" Value="ON"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 1: 3-column 메인 레이아웃 (좌측 콘텐츠 | 구분선 | 우측 컨트롤+상태) -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- ════════════════════════════════════════ -->
            <!-- 좌측 Column 0: 모델 카드 + 듀얼 클래스 선택 -->
            <!-- ════════════════════════════════════════ -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 1. 워크플로우 / 모델 카드 영역 -->
                <Border Grid.Row="0" Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <!-- 제목 + 디렉터리 선택/리프레시 버튼 -->
                        <DockPanel Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="워크플로우 / 모델" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,4"/>
                                <TextBlock Foreground="#7f8fa6" FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="모델 디렉터리를 선택해주세요."/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsModelLoaded}" Value="True">
                                                    <Setter Property="Text" Value="{Binding LoadedModelName, StringFormat='현재 모델: {0}'}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button Command="{Binding RefreshModelCardsCommand}" 
                                        ToolTip="새로고침"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Foreground="#5dade2" Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18"/>
                                </Button>
                                <Button Command="{Binding BrowseModelDirectoryCommand}" 
                                        Content="폴더 선택"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Foreground="#5dade2" BorderBrush="#5dade2"
                                        Padding="12,6" Height="32" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </DockPanel>
                        
                        <!-- 모델 디렉터리 경로 표시 (비어있으면 숨김) -->
                        <TextBlock Text="{Binding ModelDirectory}" Foreground="#57606f" FontSize="10" 
                                   TextTrimming="CharacterEllipsis" Margin="0,0,0,8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ModelDirectory}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- 수평 스크롤 모델 카드 리스트 -->
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                      PreviewMouseWheel="ModelCardScroll_PreviewMouseWheel">
                            <ItemsControl ItemsSource="{Binding ModelCards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="140" Margin="0,0,8,0" CornerRadius="8" Padding="12" Cursor="Hand"
                                                MouseLeftButtonDown="ModelCard_MouseLeftButtonDown">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#0f3460"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#5dade2"/>
                                                            <Setter Property="Background" Value="#1a3a6b"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#163d70"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel>
                                                <materialDesign:PackIcon Kind="FileDocument" Width="28" Height="28" 
                                                                         Foreground="#5dade2" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                                           TextAlignment="Center" TextTrimming="CharacterEllipsis" MaxHeight="36"
                                                           TextWrapping="Wrap"/>
                                                <!-- 선택 마크 -->
                                                <TextBlock Text="✓ 로드됨" Foreground="#2ed573" FontSize="10" FontWeight="Bold"
                                                           TextAlignment="Center" Margin="0,6,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- 카드 없을 때 안내 -->
                        <TextBlock Text="모델 디렉터리를 선택하면 JSON 모델 파일이 카드로 표시됩니다." 
                                   Foreground="#57606f" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ModelCards.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 2. 에어건 타겟 클래스 선택 영역 (듀얼 ItemsControl — 카드 이동 방식) -->
                <!-- AI가 수정함: 풀컬러 배경 → 좌측 악센트 바 + 듀얼 ItemsControl(선택/미선택) 분리 표시 -->
                <Border Grid.Row="1" Background="#16213e" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 헤더 영역 -->
                        <DockPanel Grid.Row="0" Margin="4,0,4,8">
                            <StackPanel>
                                <TextBlock Text="에어건 타겟 클래스" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text="선택된 클래스만 에어건이 동작합니다." Foreground="#7f8fa6" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <Button Content="전체" Command="{Binding Settings.SelectAllSortClassesCommand}" 
                                        Style="{StaticResource MaterialDesignFlatButton}" 
                                        Foreground="#5dade2" Padding="8,4" Height="28" FontSize="11"/>
                                <Button Content="리버스" Command="{Binding Settings.ReverseSortClassesCommand}" 
                                        Style="{StaticResource MaterialDesignFlatButton}" 
                                        Foreground="#f39c12" Padding="8,4" Height="28" FontSize="11"/>
                                <Button Content="해제" Command="{Binding Settings.DeselectAllSortClassesCommand}" 
                                        Style="{StaticResource MaterialDesignFlatButton}" 
                                        Foreground="#aaa" Padding="8,4" Height="28" FontSize="11"/>
                            </StackPanel>
                        </DockPanel>
                        
                        <!-- ── 선택된 타겟 섹션 (IsSelected=True인 카드만 표시) ── -->
                        <Border Grid.Row="1" Background="#0a2240" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="선택된 타겟" Foreground="#5dade2" FontSize="11" FontWeight="SemiBold" Margin="4,0,4,6"/>
                                <ItemsControl ItemsSource="{Binding Settings.SortClasses}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- AI가 수정함: 선택된 카드 — 좌측 악센트 바 + 체크마크 + 흰색 텍스트 -->
                                            <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Width="Auto" MinWidth="120" Height="62"
                                                          Margin="3" Cursor="Hand"
                                                          Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="cardRoot" CornerRadius="8" Background="#0f3460" 
                                                                BorderThickness="0" Padding="0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="4"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <!-- 좌측 악센트 바 (클래스 색상) -->
                                                                <Border Grid.Column="0" CornerRadius="8,0,0,8"
                                                                        Background="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                                
                                                                <!-- 카드 내용 -->
                                                                <Grid Grid.Column="1" Margin="10,6,10,6">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Ellipse Grid.Column="0" Width="10" Height="10"
                                                                                 Fill="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                                        <TextBlock Grid.Column="2" Text="✓" Foreground="#2ed573" FontSize="12" FontWeight="Bold"/>
                                                                    </Grid>
                                                                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,3,0,0">
                                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                        <TextBlock Text="{Binding Index, StringFormat='Class {0}'}" Foreground="#7f8fa6" FontSize="10"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="cardRoot" Property="Background" Value="#163d70"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                        <!-- 구분선 -->
                        <Border Grid.Row="2" Height="1" Background="#2c3e6b" Margin="4,0,4,8"/>
                        
                        <!-- ── 전체 클래스 섹션 (IsSelected=False인 카드만 표시) ── -->
                        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <ItemsControl ItemsSource="{Binding Settings.SortClasses}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- AI가 수정함: 미선택 카드 — 어두운 배경 + 회색 텍스트 + 클래스 색상 도트 -->
                                            <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Width="Auto" MinWidth="120" Height="62"
                                                          Margin="3" Cursor="Hand"
                                                          Visibility="{Binding IsSelected, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="cardRoot" CornerRadius="8" Background="#0f3460" 
                                                                BorderThickness="1" BorderBrush="#1a2744" Padding="0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="4"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <!-- 좌측 악센트 바 (비선택: 투명) -->
                                                                <Border Grid.Column="0" CornerRadius="8,0,0,8"
                                                                        Background="Transparent"/>
                                                                
                                                                <!-- 카드 내용 -->
                                                                <Grid Grid.Column="1" Margin="10,6,10,6">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Ellipse Grid.Column="0" Width="10" Height="10"
                                                                                 Fill="{Binding ColorHex, Converter={StaticResource HexToColorBrushConverter}}"/>
                                                                    </Grid>
                                                                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,3,0,0">
                                                                        <TextBlock Text="{Binding Name}" Foreground="#a0a0a0" FontSize="13" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                                        <TextBlock Text="{Binding Index, StringFormat='Class {0}'}" Foreground="#57606f" FontSize="10"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="cardRoot" Property="Background" Value="#163d70"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- 모델 미로드 안내 -->
                                <TextBlock Text="모델을 먼저 로드해주세요." 
                                           Foreground="#57606f" FontSize="14" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Settings.SortClasses.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- 구분선 -->
            <Border Grid.Column="1" Width="1" Background="#2c3e6b" Margin="8,0"/>
            
            <!-- ════════════════════════════════════════ -->
            <!-- 우측 Column 2: 운영 컨트롤 + 상태 인디케이터 + 타이머 -->
            <!-- AI가 수정함: 하단 바에서 원래 우측 컬럼 위치로 복원 -->
            <!-- ════════════════════════════════════════ -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- 1) 시뮬레이션 Start/Stop -->
                    <Border Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="시뮬레이션 모드" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="저장된 HSI 데이터로 분류를 테스트합니다." 
                                       Foreground="#7f8fa6" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,12"/>
                            
                            <Button Command="{Binding ToggleSimulationCommand}" 
                                    Height="50" FontSize="14" Cursor="Hand"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Background" Value="#2ed573"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Content" Value="▶  시뮬레이션 시작"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSimulating}" Value="True">
                                                <Setter Property="Background" Value="#ff4757"/>
                                                <Setter Property="Content" Value="⏹  시뮬레이션 중지"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 2) 하드웨어(EtherCAT) 연결 -->
                    <Border Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="하드웨어 연결" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="EtherCAT 마스터를 통해 에어건을 제어합니다." 
                                       Foreground="#7f8fa6" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,12"/>
                            
                            <Button Command="{Binding ConnectHardwareCommand}" 
                                    Height="50" FontSize="14" Cursor="Hand"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                        <Setter Property="BorderBrush" Value="#3742fa"/>
                                        <Setter Property="Foreground" Value="#3742fa"/>
                                        <Setter Property="Content" Value="하드웨어 연결"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHardwareConnected}" Value="True">
                                                <Setter Property="Background" Value="#388E3C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#388E3C"/>
                                                <Setter Property="Content" Value="✓ 연결됨 — 클릭하여 해제"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- 3) 피더 / 벨트 / 램프 — 가로 3열 컴팩트 버튼 -->
                    <Border Background="#16213e" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <UniformGrid Rows="1" Columns="3">
                            <!-- 피더 -->
                            <StackPanel Margin="2">
                                <TextBlock Text="피더" Foreground="#7f8fa6" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <Button Command="{Binding ToggleFeederPowerCommand}" 
                                        Height="40" FontSize="12" Cursor="Hand"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Setter Property="BorderBrush" Value="#f39c12"/>
                                            <Setter Property="Foreground" Value="#f39c12"/>
                                            <Setter Property="Content" Value="ON"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFeederOn}" Value="True">
                                                    <Setter Property="Background" Value="#e67e22"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#e67e22"/>
                                                    <Setter Property="Content" Value="OFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <!-- 벨트 -->
                            <StackPanel Margin="2">
                                <TextBlock Text="벨트" Foreground="#7f8fa6" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <Button Command="{Binding ToggleBeltCommand}" 
                                        Height="40" FontSize="12" Cursor="Hand"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Setter Property="BorderBrush" Value="#1abc9c"/>
                                            <Setter Property="Foreground" Value="#1abc9c"/>
                                            <Setter Property="Content" Value="ON"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBeltOn}" Value="True">
                                                    <Setter Property="Background" Value="#16a085"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#16a085"/>
                                                    <Setter Property="Content" Value="OFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <!-- 램프 -->
                            <StackPanel Margin="2">
                                <TextBlock Text="램프" Foreground="#7f8fa6" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <Button Command="{Binding ToggleLampCommand}" 
                                        Height="40" FontSize="12" Cursor="Hand"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Setter Property="BorderBrush" Value="#f1c40f"/>
                                            <Setter Property="Foreground" Value="#f1c40f"/>
                                            <Setter Property="Content" Value="ON"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLampOn}" Value="True">
                                                    <Setter Property="Background" Value="#f39c12"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#f39c12"/>
                                                    <Setter Property="Content" Value="OFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </UniformGrid>
                    </Border>
                    
                    <!-- 4) 상태 인디케이터 (램프 온도 + 에러) — 원본(895c671) 복원 -->
                    <Border Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="상태 인디케이터" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <!-- 램프 온도 인디케이터 (프로그레스 바 스타일) -->
                            <Border x:Name="LampIndicatorRoot"
                                    CornerRadius="12"
                                    Margin="0,0,0,8"
                                    Padding="0"
                                    MinWidth="200"
                                    MinHeight="44">
                                <Grid>
                                    <!-- 배경: 상태에 따라 전체 채우기 -->
                                    <Border CornerRadius="12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#1a2744"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="2">
                                                        <Setter Property="Background" Value="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}, ConverterParameter=0.3}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="3">
                                                        <Setter Property="Background" Value="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}, ConverterParameter=0.3}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="4">
                                                        <Setter Property="Background" Value="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}, ConverterParameter=0.3}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    
                                    <!-- 프로그레스 바: 가열 중(0,1)일 때만 표시 -->
                                    <Border HorizontalAlignment="Left"
                                            CornerRadius="12"
                                            Background="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}, ConverterParameter=0.3}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="2">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="3">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="4">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <!-- 가열 중일 때 깜빡임 -->
                                                    <DataTrigger Binding="{Binding LampColorStatus}" Value="1">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard Name="LampBlinkAnim">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                     From="1.0" To="0.4" Duration="0:0:0.6"
                                                                                     AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="LampBlinkAnim"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.Width>
                                            <MultiBinding Converter="{StaticResource PercentageWidthConverter}">
                                                <Binding Path="LampTemperaturePercent"/>
                                                <Binding ElementName="LampIndicatorRoot" Path="ActualWidth"/>
                                            </MultiBinding>
                                        </Border.Width>
                                    </Border>
                                    
                                    <!-- 컨텐츠 오버레이 -->
                                    <Border Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="💡" FontSize="14" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                                <TextBlock Text="램프" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                                <TextBlock Text=" — " Foreground="#7f8fa6" FontSize="11" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding LampIndicatorStatusText}" Foreground="#a0a0a0" FontSize="11" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding LampTemperaturePercentText}" Foreground="#a0a0a0" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                            </StackPanel>
                                            
                                            <Ellipse Grid.Column="3" Width="12" Height="12"
                                                     Fill="{Binding LampColorStatus, Converter={StaticResource LampStatusToColorConverter}}"
                                                     VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <!-- 왼쪽 벨트 에러 -->
                            <Border CornerRadius="8" Margin="0,0,0,4" Padding="0">
                                <Border Background="{Binding LeftBeltError, Converter={StaticResource StatusToColorConverter}, ConverterParameter=0.15}"
                                        CornerRadius="8" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="AlertCircleOutline" Width="16" Height="16"
                                                                 Foreground="{Binding LeftBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="왼쪽 벨트" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="8,0"/>
                                        <Ellipse Grid.Column="2" Width="10" Height="10"
                                                 Fill="{Binding LeftBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Border>
                            
                            <!-- 오른쪽 벨트 에러 -->
                            <Border CornerRadius="8" Margin="0,0,0,4" Padding="0">
                                <Border Background="{Binding RightBeltError, Converter={StaticResource StatusToColorConverter}, ConverterParameter=0.15}"
                                        CornerRadius="8" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="AlertCircleOutline" Width="16" Height="16"
                                                                 Foreground="{Binding RightBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="오른쪽 벨트" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="8,0"/>
                                        <Ellipse Grid.Column="2" Width="10" Height="10"
                                                 Fill="{Binding RightBeltError, Converter={StaticResource StatusToColorConverter}}"
                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Border>
                            
                            <!-- 긴급 정지 -->
                            <Border CornerRadius="8" Margin="0,0,0,4" Padding="0">
                                <Border Background="{Binding EmergencyStop, Converter={StaticResource StatusToColorConverter}, ConverterParameter=0.15}"
                                        CornerRadius="8" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="StopCircleOutline" Width="16" Height="16"
                                                                 Foreground="{Binding EmergencyStop, Converter={StaticResource StatusToColorConverter}}"
                                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="긴급 정지" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="8,0"/>
                                        <Ellipse Grid.Column="2" Width="10" Height="10"
                                                 Fill="{Binding EmergencyStop, Converter={StaticResource StatusToColorConverter}}"
                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Border>
                            
                            <!-- 에러 클리어 버튼 -->
                            <Button Command="{Binding ErrorClearCommand}" Content="에러 클리어"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="#ff6b6b" BorderBrush="#ff6b6b"
                                    HorizontalAlignment="Stretch" Margin="0,4,0,0"
                                    Height="32" FontSize="11"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 5) 시작 타이머 (카메라 재시도 카운트다운) — 원본(895c671) 복원 -->
                    <Border Background="#16213e" CornerRadius="8" Padding="16" Margin="0,0,0,8"
                            BorderBrush="OrangeRed" BorderThickness="2"
                            Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="장비 준비 중" Foreground="#ff6348" FontSize="14" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            
                            <!-- 카운트다운 시간 표시 -->
                            <TextBlock Text="{Binding RemainingTimeString}" 
                                       Foreground="White" FontSize="48" FontWeight="Bold"
                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            
                            <TextBlock Text="카메라 초기화 재시도까지 대기 중입니다." 
                                       Foreground="#7f8fa6" FontSize="11" TextWrapping="Wrap"
                                       HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            
                            <!-- 램프/벨트 ON/OFF 퀵 버튼 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <Button Command="{Binding ToggleLampCommand}" 
                                        Width="120" Height="36" FontSize="11" Margin="4,0"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background" Value="#f1c40f"/>
                                            <Setter Property="Foreground" Value="#1a1a2e"/>
                                            <Setter Property="Content" Value="램프 ON"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLampOn}" Value="True">
                                                    <Setter Property="Background" Value="#e67e22"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Content" Value="램프 OFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding ToggleBeltCommand}" 
                                        Width="120" Height="36" FontSize="11" Margin="4,0"
                                        materialDesign:ButtonAssist.CornerRadius="6">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background" Value="#1abc9c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Content" Value="벨트 ON"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBeltOn}" Value="True">
                                                    <Setter Property="Background" Value="#16a085"/>
                                                    <Setter Property="Content" Value="벨트 OFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            
                            <!-- 타이머 중지 버튼 -->
                            <Button Command="{Binding StopTimerCommand}" Content="타이머 중지"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="#ff6348" BorderBrush="#ff6348"
                                    HorizontalAlignment="Center" Width="160" Height="36" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- ═══════════════════════════════════════════════════ -->
        <!-- Row 2: 하단 상태 메시지 -->
        <!-- ═══════════════════════════════════════════════════ -->
        <Border Grid.Row="2" Background="#16213e" Padding="12,4">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#7f8fa6" FontSize="11" HorizontalAlignment="Center"/>
        </Border>
        
    </Grid>
</UserControl>